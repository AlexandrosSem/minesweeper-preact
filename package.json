{
  "private": true,
  "name": "minesweeper-preact",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "lint": "eslint src",
    "test": "jest",
    "dev:server": "nodemon --watch src/server/ src/server/index.js",
    "dev:client": "preact watch",
    "dev": "concurrently -k npm:dev:*"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.3.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "nodemon": "^2.0.16",
    "preact-cli": "^3.3.5",
    "sirv-cli": "1.0.14"
  },
  "dependencies": {
    "preact": "^10.7.2",
    "preact-render-to-string": "^5.2.0",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
